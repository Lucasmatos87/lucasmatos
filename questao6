function formulario() {
  var form = document.getElementById('enviar');
  
      var nome = form[0].value;
      var sobrenome = form[1].value;
      var salario = form[2].value;
      var cadastro = {
        nome,
        sobrenome,
        salario
      };
      cadastro.salario = salario;
      cadastro.nome = nome;
      cadastro.sobrenome = sobrenome;
      if(cadastro.nome !== "" && cadastro.salario !== undefined && cadastro.sobrenome !== undefined){
        alert('Cadastro realizado com sucesso!');
      }else{
        alert('Erro ao cadastrar');  
      }
    
} 

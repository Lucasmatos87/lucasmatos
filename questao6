    <form id="enviar" onsubmit="formulario()">
      <table>
        <tr>
          <td>Nome: </td>
          <td>
            <input id="nome" placeholder="Apenas Letras" type="text" pattern="[A-Za-z]+$">
          </td>
        </tr>
        <tr>
          <td>Sobrenome: </td>
          <td>
            <input id="sobrenome" placeholder="Apenas Letras" type="text" pattern="[A-Za-z]+$">
          </td>
        </tr>
        <tr>
          <td>Salario: </td>
          <td>
            <input id="salario" placeholder="Apenas NÃºmeros" type="text" pattern="[0-9]+$">

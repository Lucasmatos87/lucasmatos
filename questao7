<!DOCTYPE html>
<html>
	<head>
	        <link rel="stylesheet" href="style.css">
		<script src="script.js"></script>
	</head>

	<body>
	<h1>Lista de Tarefas</h1>
	<div id="lista">
		  Tarefa 01
   		  <br>
		  Tarefa 02
	</div>
	  <input type="text" id="tarefa" required="required" />
	  <input id="enviar" type="submit" value="Incluir Tarefa" onclick="inserirTarefa()"/>
	</body>

</html>

var tarefas = [];
function inserirTarefa(){
	var form = document.getElementById('tarefa');
	var tarefa = form.value;
	if (tarefa === null){
		alert('Erro ao inserir nova tarefa');
	} else {
	  tarefas.push(tarefa);
	  printTarefas();
	}
}	
//alert(retorno)
function printTarefas(){
  var tamanho = tarefas.length;
  var paragrafo = document.getElementById('lista');
    var lista = document.createTextNode(tarefas[tamanho-1]);
    var br = document.createElement("br");
    paragrafo.appendChild(br);
    paragrafo.appendChild(lista);
}
